@model IEnumerable<Product>

    <div class="row pb-3">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2" style="height:100%">
                <div class="col-12 p-1" style="border:1px solid #008cba; border-radius:5px;overflow: hidden;">
                    <div class="card">
                        <img src="@product.ImageUrl" class="card-img-top rounded" style="object-fit: cover; height: 300px; width: 100%" />
                    </div>
                    <div class="card-body p-2">
                    <div class="pl-1">
                        <p class="card-title h5 text-primary">@product.Title</p>
                        <p class="card-title text-info">By <b>@product.Author</b></p>
                    </div>
                    <div class="pl-1">
                        <p>List Price: <strike><b>@product.ListPrice.ToString().00</b></strike></p>
                    </div>
                    <div class="pl-1">
                        <p>As Low As: <b>@product.Price100?.ToString().00</b></p>
                    </div>
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-primary" style="width:100%" asp-route-id="@product.Id">Details</a>
                    </div>
                    </div>
                   
            </div>
        </div>
    }
</div>

